@model List<ApiMovieViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api IMDB Top 100 Film Listesi</h1>

<br />
<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Film Adı</th>
        <th>IMDB Puanı</th>
        <th>Fotoğrafı</th>
        <th>Yılı</th>
        <th>IMDB linki</th>
    </tr>
    @foreach(var item in Model){
        <tr>
            <td>@item.rank</td>
            <td>@item.title</td>
            <td>@item.rating</td>
            <td><img src="@item.image" height="100" width="100" /></td>
            <td>@item.year</td>
            <td><a href="@item.imdb_link">IMDB Linki</a></td>

        </tr>
    }
</table>