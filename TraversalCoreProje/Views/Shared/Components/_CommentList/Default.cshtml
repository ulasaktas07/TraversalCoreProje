@using EntityLayer.Concrete
@model List<Comment>
<div class="comments mt-5">
    <h4 class="side-title ">Yorumlar (@ViewBag.commentCount)</h4>

    @foreach (var item in Model)
    {
        <div class="media mt-4">
            <div class="img-circle">
            <img src="@item.AppUser.ImageUrl" class="img-fluid" alt="...">
        </div>
        <div class="media-body">

            <ul class="time-rply mb-2">
                <li>
                    <a href="#URL" class="name mt-0 mb-2 d-block">@item.AppUser.Name @item.AppUser.Surname</a>
                        @(((DateTime.Now - item.CommentDate).Days / 365) > 0 ? ((DateTime.Now - item.CommentDate).Days / 365) + " yıl önce" :
                        ((DateTime.Now - item.CommentDate).Days / 30) > 0 ? ((DateTime.Now - item.CommentDate).Days / 30) + " ay önce" :
                        ((DateTime.Now - item.CommentDate).Days / 7) > 0 ? ((DateTime.Now - item.CommentDate).Days / 7) + " hafta önce" :
                        ((DateTime.Now - item.CommentDate).Days) > 0 ? ((DateTime.Now - item.CommentDate).Days) + " gün önce" :
                        ((DateTime.Now - item.CommentDate).Hours) > 0 ? ((DateTime.Now - item.CommentDate).Hours) + " saat önce" :
                        ((DateTime.Now - item.CommentDate).Minutes) > 0 ? ((DateTime.Now - item.CommentDate).Minutes) + " dakika önce" :
                        ((DateTime.Now - item.CommentDate).Seconds) > 0 ? ((DateTime.Now - item.CommentDate).Seconds) + " saniye önce" : "Şimdi")

                </li>
                <li class="reply-last">
                    <a href="#reply" class="reply">
                        Yanıtla
                    </a>
                </li>
            </ul>
            <p>
              @item.CommentContent
            </p>
        </div>
    </div>
    }
</div>